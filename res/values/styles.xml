<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.Sherlock.Light" />

    <style name="AppTheme.NoBar" parent="Theme.Sherlock.Light.NoActionBar"></style>

    <style name="BorderlessButton" parent="@android:style/Widget">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
    
    <style name="BorderlessButton.NoPadding">
        <item name="android:padding">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="SubHeaderTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_lightgray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/padding_normal</item>
    </style>

</resources>