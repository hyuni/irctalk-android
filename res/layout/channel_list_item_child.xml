<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_horizontal"
    android:paddingBottom="@dimen/padding_normal"
    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
    android:paddingRight="@dimen/padding_normal"
    android:paddingTop="@dimen/padding_small" >

    <TextView
        android:id="@+id/channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_small"
        android:layout_toLeftOf="@+id/img_user_count"
        android:layout_alignParentTop="true"
        android:text="#irctalk"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_user_count"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="3"
        android:textColor="@android:color/secondary_text_light" />

    <ImageView
        android:id="@+id/img_user_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/channel"
        android:layout_toLeftOf="@+id/user_count"
        android:padding="2dp"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/last_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/channel"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="yh_macbook: 가나다라마바사아자차카타파하ABCDEFGHIJKLMNOP"
        android:textColor="@android:color/secondary_text_light" />

</RelativeLayout>